<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MechAp.MyGarage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Black" Padding="58" Margin="0" CornerRadius="0">
                <Label Text="My Garage" HorizontalTextAlignment="Center" TextColor="Silver" FontSize="56"/>
            </Frame>
            <Frame Background="Black" Margin="30, 0, 30, 30" CornerRadius="10">
                <Image Source="mechaplogo.PNG" WidthRequest="200" MinimumWidthRequest="200">
                </Image>
            </Frame>
            <Entry Placeholder="Vehicle 1" Margin="20, 20, 30, 10"/>
            <Entry Placeholder="Vehicle 2" Margin="20, 20, 30, 10"/>
            <Entry Placeholder="Vehicle 3" Margin="20, 20, 30, 10"/>
           <Button x:Name="VehicleRegPgBtn" Text="Vehicle Registration" Clicked="VehicleRegBtn_Clicked" Margin="30, 10, 30, 20" CornerRadius="30"></Button>
           <Button x:Name="MainInputPgBtn" Text="Maintenance Input" Clicked="MainInputPgBtn_Clicked" Margin="30, 10, 30, 20" CornerRadius="30"></Button>
        </StackLayout>
    </ContentPage.Content>
        
</ContentPage>